<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Xappy.ControlGallery.IndexPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CollectionView"
    Shell.TabBarIsVisible="false"
    mc:Ignorable="d">
    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            .title {
                font-size: 24;
                color: #000000;
            }
            ]]>
        </StyleSheet>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout Margin="15,30,0,0">
            <Label Text="Layouts" class="title" />
            <CollectionView
                x:Name="LayoutsCV"
                Margin="-15,0,0,0"
                HeightRequest="200"
                ItemsSource="{Binding Layouts}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectCommand}"
                SelectionMode="Single">
                <CollectionView.EmptyView>
                    <StackLayout BackgroundColor="Silver" VerticalOptions="Fill">
                        <Label
                            BackgroundColor="Red"
                            HorizontalOptions="Center"
                            Text="Empty"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="10"
                            BackgroundColor="White"
                            HeightRequest="140"
                            WidthRequest="50">
                            <Frame
                                Padding="8"
                                BackgroundColor="{StaticResource tomato}"
                                CornerRadius="3"
                                Visual="Material">
                                <Label
                                    d:Text="Something Else"
                                    FontSize="14"
                                    InputTransparent="true"
                                    LineBreakMode="NoWrap"
                                    Text="{Binding Title}"
                                    TextColor="White"
                                    VerticalOptions="End" />
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Pages" class="title" />
            <CollectionView
                x:Name="PagesCV"
                Margin="-15,0,0,0"
                HeightRequest="200"
                ItemsSource="{Binding Pages}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectCommand}"
                SelectionMode="Single">
                <CollectionView.EmptyView>
                    <StackLayout BackgroundColor="Silver" VerticalOptions="Fill">
                        <Label
                            BackgroundColor="Red"
                            HorizontalOptions="Center"
                            Text="Empty"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="10"
                            BackgroundColor="White"
                            HeightRequest="140"
                            WidthRequest="50">
                            <Frame
                                Padding="8"
                                BackgroundColor="{StaticResource soft_blue}"
                                CornerRadius="3"
                                Visual="Material">
                                <Label
                                    d:Text="Something Else"
                                    FontSize="14"
                                    InputTransparent="true"
                                    LineBreakMode="NoWrap"
                                    Text="{Binding Title}"
                                    TextColor="White"
                                    VerticalOptions="End" />
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="Views" class="title" />
            <CollectionView
                x:Name="ViewsCV"
                Margin="-15,0,0,0"
                HeightRequest="200"
                ItemsSource="{Binding Views}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                SelectionChangedCommand="{Binding SelectCommand}"
                SelectionMode="Single">
                <CollectionView.EmptyView>
                    <StackLayout BackgroundColor="Silver" VerticalOptions="Fill">
                        <Label
                            BackgroundColor="Red"
                            HorizontalOptions="Center"
                            Text="Empty"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Padding="10"
                            BackgroundColor="White"
                            HeightRequest="140"
                            WidthRequest="50">
                            <Frame
                                Padding="8"
                                BackgroundColor="{StaticResource brown_grey}"
                                CornerRadius="3"
                                Visual="Material">
                                <Label
                                    d:Text="Something Else"
                                    FontSize="14"
                                    InputTransparent="true"
                                    LineBreakMode="NoWrap"
                                    Text="{Binding Title}"
                                    TextColor="White"
                                    VerticalOptions="End" />
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>