<?xml version="1.0" encoding="UTF-8"?>
<Shell
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xappy"
    xmlns:scenarios="clr-namespace:Xappy.Scenarios"
    xmlns:controlGallery="clr-namespace:Xappy.ControlGallery"
    xmlns:blog="clr-namespace:Xappy.Content.Blog"
    FlyoutBehavior="Flyout"
    Route=""
    RouteHost="microsoft.com"
    RouteScheme="app"
    x:Class="Xappy.AppShell">
    
    <Shell.FlyoutIcon>
        <FontImageSource
            FontFamily="{StaticResource FontAwesome}"
            Glyph="{x:Static local:IconFont.Bars}"
            Color="{StaticResource AccentColor}"
            Size="24" />
    </Shell.FlyoutIcon>
    
    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid Padding="20,66,0,40" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="20" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" VerticalOptions="Center" HorizontalOptions="End">
                    <Image.Source>
                        <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                         Glyph="{x:Static local:IconFont.PaintBrush}"
                                         Color="White"
                                         Size="16" />
                    </Image.Source>
                </Image>
                <Label
                    Grid.Column="1"
                    VerticalOptions="Center"
                    FontSize="17"
                    Text="Visual Settings"
                    TextColor="White" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
    <FlyoutItem
        Title="Main"
        Style="{DynamicResource CurrentTheme}"
        FlyoutDisplayOptions="AsMultipleItems">
        <Tab
            Title="Latest">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.AddressBook}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="UI Controls">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.Toolbox}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate controlGallery:ControlPage}" />
        </Tab>
        <Tab
            Title="Scenarios">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.Monument}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate scenarios:IndexPage}" />
        </Tab>
        <Tab
            Title="Resource">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.Boxes}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="About">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.InfoCircle}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab
            Title="Blog">
            <Tab.Icon>
                <FontImageSource FontFamily="{StaticResource FontAwesome}"
                                 Glyph="{x:Static local:IconFont.InfoCircle}"
                                 Color="White"
                                 Size="14" />
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate blog:BlogPage}" />
        </Tab>
    </FlyoutItem>
    
    
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="20,10,0,10" ColumnSpacing="20
                ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="20" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Source="{Binding Icon}" />
                <Label
                    Grid.Column="1"
                    VerticalOptions="Center"
                    Text="{Binding Title}"
                    TextColor="White"
                    FontSize="17"
                    />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>
</Shell>